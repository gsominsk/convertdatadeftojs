external function Boolean IsOffice2(Boolean);

global
updating function LongInt RMVcRecordCheck(record RMVc RMr,record RMVc RM2r,LongInt stat,LongInt long4)
BEGIN
  LongInt res;

  res = 0;
  if (IsOffice2(true)) then begin
    if (blank(RMr.Comment)) then begin
      RecordCheckError(1058,"",-1,"Comment");      
      res = -1;
      goto LRMVcRecordCheck;
    end;
  end;
  
LRMVcRecordCheck:;
  RMVcRecordCheck = res;
  RETURN;
END;
