global
updating function LongInt HRMPRVcRecordCheck(record HRMPRVc HRMPRr,record HRMPRVc HRMR2r,LongInt stat,LongInt check)
begin
  LongInt res;

  res = 0;
  if (blank(HRMPRr.Code)) then begin
    RecordCheckError(1058,"",-1,"Code");      
    res = -1;
    goto LHRMPRVcRecordCheck;
  end;
LHRMPRVcRecordCheck:;  
  HRMPRVcRecordCheck = res;
  return;
end;