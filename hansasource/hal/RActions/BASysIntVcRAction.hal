global
function LongInt BASysIntVcRecordInIndex(record BASysIntVc BASIr,string indexname)
begin
  LongInt res;
  
  res = 1;
  if (BASIr.Closed!=0) then begin 
    if (indexname=="ActSerNr") then begin res = 0; end;
  end;
  BASysIntVcRecordInIndex = res;
  return;
end;

