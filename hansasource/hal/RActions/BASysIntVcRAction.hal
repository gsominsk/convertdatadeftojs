begin
  LongInt res;
  
  res = 0;
  if (BASIr.SerNr<=0) then begin
    BASIr.SerNr = NextSerNr("BASysIntVc",CurrentDate,-1,false,"");
  end;
  BASysIntVcRecordCheck = res;
  return;
end;
