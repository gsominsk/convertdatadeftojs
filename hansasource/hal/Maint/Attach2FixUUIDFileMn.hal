external function Boolean ChangeAttachmentFilenameToUUID(var record Attach2Vc);

global
updating procedure Attach2FixUUIDFileMn(var record RcVc RepSpec)
begin
  record Attach2Vc Attachr;
  
  while (LoopMain(Attachr,1,true)) begin
    if (Attachr.Storage==kAttachStorageSerNr) then begin
      if (ChangeAttachmentFilenameToUUID(Attachr)==false) then begin
        LogText(0,"Failed to convert file for attachment with serial number: " & Attachr.SerNr);
      end;
    end;
  end;
  return;
end;  
