external function LongInt VIforCLOutRecordExists(LongInt);

global
procedure ShowColVIDsm()
BEGIN
  record CLOutVc CLOutr;
  record RcVc RepSpec;
  Integer wn;
  
  wn = CurWindow;
  GetWindowRecord(wn,CLOutr);
  if (VIforCLOutRecordExists(CLOutr.SerNr)>0) then begin
    RepSpec.repname = "CLOutColVIRn";
    RepSpec.long1 = CLOutr.SerNr;
    RepSpec.Media = mtScreen;
    RunReport(RepSpec,0);    
  end;
  RETURN;
END;
