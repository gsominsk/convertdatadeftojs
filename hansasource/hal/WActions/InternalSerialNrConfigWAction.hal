remote procedure InternalSerialNrConfigVc_PasteMainItem(var record InternalSerialNrConfigVc);

function Boolean InternalSerialNrConfigDClassMainItemEFAfter(Integer wn,Integer changed)
begin
  record InternalSerialNrConfigVc ISNCr;
  
  if (changed!=0) then begin
    GetWindowRecord(wn,ISNCr);
    InternalSerialNrConfigVc_PasteMainItem(ISNCr);
    PutWindowRecord(wn,ISNCr);
  end;
  
  return;
end;

global
function Boolean InternalSerialNrConfigDClassAfterEditField(Integer wn,string fieldname,Integer fn, Integer rownr,Integer changed)
begin
  Boolean res;

  switch (fieldname) begin
    case "MainItem": res = InternalSerialNrConfigDClassMainItemEFAfter(wn,changed);
  end;
  
  InternalSerialNrConfigDClassAfterEditField = res;
  return;
end;
