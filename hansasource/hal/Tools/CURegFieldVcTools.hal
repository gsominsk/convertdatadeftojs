global
function Boolean CURegFieldVc_FieldTypeIsClassification(record CURegFieldVc CURegFieldr)
begin
  Boolean res;
  
  switch (CURegFieldr.FieldType) begin  
    case kCURegFieldTypeClassificationSelect: res = true;
    case kCURegFieldTypeClassificationRadio: res = true;
    case kCURegFieldTypeClassificationCheckbox: res = true;
    otherwise res = false;
  end;
  
  CURegFieldVc_FieldTypeIsClassification = res;
  return;
end;

global
procedure CURegFieldVc_PasteFieldType(var record CURegFieldVc CURegFieldr)
begin
  CURegFieldr.Comment = StringFromSet(462,CURegFieldr.FieldType);
  return;
end;
