procedure ConfirmProcessState(Integer state,string lock)
begin
  switch (state) begin
    case kExternalProcessStateFinished:
      Delete_File("/tmp/" & lock);
      Delete_File("/tmp/" & lock & "Data");
      Delete_File("/tmp/" & lock & "Completed");
    case kExternalProcessStateStopped:
      Delete_File("/tmp/" & lock);
