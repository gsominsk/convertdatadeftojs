begin
  record AmazonInstanceListVc AILr;
  Integer i;
  Boolean res;

  if (GetGlobalBoolean("ASPIdleTasksStopped")==true) then begin goto LClearAmazonInstanceList; end;

  DBHold;
  while (LoopMain(AILr,1,true)) begin
    if (GetGlobalBoolean("ASPIdleTasksStopped")==true) then begin goto LClearAmazonInstanceList; end;
    RecordDelete(AILr);
    StepBack(AILr);
