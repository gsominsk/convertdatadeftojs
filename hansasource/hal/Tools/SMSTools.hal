global
procedure PasteLTxttoSMS(record SMSVc SMSr)
begin
  record LTxtVc LTxtr;
  string 255 tstr;
  Integer pos,textsize;

  LTxtr.Code = SMSr.LTxtCode;
  if (ReadFirstMain(LTxtr,1,true)) then begin
    textsize = SizeTextCnt(LTxtr);
    while (pos<textsize) begin
      tstr = StringFromText(LTxtr,pos,255);
      pos = pos + len(tstr);
      if (len(tstr)==0) then begin
        pos = pos + 1;
      end;
      AddToText(tstr,SMSr);
    end;
  end;  
  return;
end;
